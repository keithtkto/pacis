<div class="flex">
  <div class="new-com-sign-up">
    <%= form_for @company do |f| %>
      <% if @company.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @company.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <div class="field">
        <%= f.label "Company name" %><br>
        <%= f.text_field :name, :placeholder => "Your Company's Name" %>
      </div>

      <div class="field">
        <%= f.label "Field" %><br>
        <%= f.text_field :field, :placeholder => "Example: Technology" %>
      </div>

      <div class="field">
        <%= f.label "Country" %><br>
        <%= country_select "company", :country, priority_countries: ["US", "CA", "MX", "CU"] %>
      </div>

      <div class="field">
        <%= f.label "Timezone" %><br>
        <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, default: "Pacific Time (US & Canada)" %>
      </div>

      <div class="field">
        <%= f.label "Paid period start-day" %><br>
        <%= f.select :week_start_day, options_for_select([
          ["Monday", 1],
          ["Tuesday", 2],
          ["Wednesday", 3],
          ["Thursday", 4],
          ["Friday", 5],
          ["Saturday", 6],
          ["Sunday", 7]
        ]) %>
      </div>

      <div>
        <%= f.submit "Submit", :class => "new" %>
      </div>

    <% end %>
  </div>
</div>
