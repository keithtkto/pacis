<label class="star">*</label><h2>Please fill in form to enroll new employee!</h2>


<div class="flex">
  <div class="new-com-sign-up">
<div class="form-container">
  <%= form_for [@company, @user] do |f| %>
    <%= f.hidden_field :is_owner, value: false %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
          <%= f.label "First name" %><label class="star">*</label><br>
          <%= f.text_field :first_name, :placeholder => "First Name*" %>
      </div>
      <div class="field">
          <%= f.label "Last name" %><label class="star">*</label><br>
          <%= f.text_field :last_name, :placeholder => "Last Name*" %>
      </div>
      <div class="field">
          <%= f.label "Email" %><label class="star">*</label><br>
          <%= f.text_field :email, :placeholder => "Email*" %>
      </div>
      <div class="field">
          <%= f.label "Date of Birth" %><br>
          <%= f.date_field :born_on, :start_year => 1899 %>

      </div>
      <div class="field">
          <%= f.label "Work title" %><br>
          <%= f.text_field :title, :placeholder => "title" %>
      </div>
      <div class="field">
          <%= f.label "Hourly rate" %><br>
          <%= f.text_field :pay_rate, :placeholder => "Pay rate" %>
      </div>
      <div class="field">
          <%= f.label "Access level" %><label class="star">*</label><br>
          <%= f.select :access_lvl, options_for_select([
            ["Regular Employee", 1],
            ["Manager", 2],
          ]) %>
      </div>
      <div class="field">
          <%= f.label "Password preset to employee's initial" %>
      </div>



          <br>
      <div>
        <%= f.submit "Submit", :class => "new" %>
      </div>
  <% end %>
</div>
</div>
</div>
