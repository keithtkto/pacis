<h1>Edit Employee page</h1>




<%= form_for [@company, @user] do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
      <%= f.label "First name:" %>
      <%= f.text_field :first_name %> *
  </div>
  <div>
      <%= f.label "Last name:" %>
      <%= f.text_field :last_name %> *
  </div>
  <div>
      <%= f.label "Email:" %>
      <%= f.text_field :email %> *
  </div>
  <div>
      <%= f.label "Date of Birth:" %>
      <%= f.date_field :born_on, :start_year => 1899 %>
  </div>
  <div>
      <%= f.label "Title:" %>
      <%= f.text_field :title %>
  </div>
      <div>
      <%= f.label "Hourly:" %>
      <%= f.text_field :pay_rate %>
  </div>
  <div>
      <%= f.label "Access level:" %>
      <%= f.select :access_lvl, options_for_select([
        ["Regular Employee", 1],
        ["Manager", 2],
      ]) %> *
  </div>

    <br>
  <div><%= f.submit "Submit" %></div>
<% end %>




<td><%= link_to 'Remove this employee', company_users_path(current_company),
    method: :delete, data: { confirm: 'Are you sure, all employee info will be lost.' } %>
</td>
