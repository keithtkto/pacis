<h2 class="portion-header">Your Info</h2>
<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Title</th>
      <th>Position</th>
      <th>Week Total(hrs)</th>
      <th>In a shift?</th>
      <th>Edit Info</th>
    </tr>
  </thead>
  <tr>
    <td><%= link_to current_user.first_name.titleize, company_user_path(current_company.id,current_user.id) %></td>
    <td><%= link_to current_user.last_name.titleize, company_user_path(current_company.id,current_user.id) %></td>
    <% if current_user.title != nil %>
      <td><%= link_to current_user.title.titleize, company_user_path(current_user.company_id,current_user.id) %></td>
    <% else %>
      <<td></td>
    <% end %>
    <td><%= link_to current_user.access, company_user_path(current_company.id,current_user.id) %></td>
    <td><%= current_user.sum_hours %></td>
    <td><%= current_user.checked_in %></td>
    <td><%= link_to "Edit Info", edit_company_user_path(current_company.id,current_user.id) %></td>
  </tr>
  </table>
<hr>
