<h1>Your info</h1>
<%= render "clock_link" %>
<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Title</th>
      <th>Manager/Employee</th>
      <th>Week Total(hrs)</th>
      <th>In a shift?</th>
      <th>Edit Info</th>
    </tr>
  </thead>
  <tr>
    <td><%= link_to current_user.first_name, company_user_path(current_company.id,current_user.id) %></td>
    <td><%= link_to current_user.last_name, company_user_path(current_company.id,current_user.id) %></td>
    <td><%= link_to current_user.title, company_user_path(current_company.id,current_user.id) %></td>
    <td><%= link_to current_user.access, company_user_path(current_company.id,current_user.id) %></td>
    <td><%= current_user.sum_hours %></td>
    <td><%= current_user.checked_in %></td>
