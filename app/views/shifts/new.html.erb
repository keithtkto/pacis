<h2>Click clock-in button below to begin this shift!</h2>


<%= form_for [@user,@shift] do |f| %>

    <div class="hidden">
      <%= f.text_field :in_at, :value => DateTime.now %>
    </div>

  <%= f.submit "Clock In!", :class => "btn-in"%>
<% end %>



<%= link_to "Back to User", company_users_path(@user) %>

